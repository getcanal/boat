{
    "rules": {
        "indent": [
            true,
            "spaces"
        ],
        "no-duplicate-variable": true,
        "no-eval": true,
        "no-trailing-whitespace": false,
        "one-line": [
            true,
            "check-open-brace",
            "check-whitespace",
            "check-else"
        ],
        "quotemark": [
            true,
            "single"
        ],
        "semicolon": [
            true,
            "always"
        ],
        "variable-name": [
            true,
            "ban-keywords",
            "allow-leading-underscore"
        ],
        "prefer-const": true,
        "whitespace": [
            true,
            "check-branch",
            "check-decl",
            "check-operator",
            "check-separator",
            "check-type"
        ],
        "interface-name": [
            true,
            "never-prefix"
        ],
        "switch-default": true,
        "only-arrow-functions": [
            true,
            "allow-declarations"
        ]
    }
}