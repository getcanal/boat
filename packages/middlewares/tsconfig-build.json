{
    "compilerOptions": {
        "baseUrl": "./src",
        "declaration": true,
        "stripInternal": true,
        "experimentalDecorators": true,
        "strictNullChecks": true,
        "moduleResolution": "node",
        "module": "commonjs",
        "noImplicitAny": true,
        "removeComments": false,
        "preserveConstEnums": true,
        "sourceMap": true,
        "outDir": "../../dist/packages/middlewares",
        "target": "es6",
        "lib": [
            "es6",
            "es2015",
            "es7"
        ],
        "skipLibCheck": true,
        "emitDecoratorMetadata": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "paths": {
            "body-parser": [
                "../node_modules/body-parser"
            ],
            "compression": [
                "../node_modules/compression"
            ],
            "cors": [
                "../node_modules/cors"
            ],
            "helmet": [
                "../node_modules/helmet"
            ]
        }
    },
    "files": [
        "src/index.ts"
    ]
}